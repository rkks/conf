# To debug SSH issues w/ git, export GIT_SSH_COMMAND="ssh -vvv"
Include ~/.ssh/config.d/*

Host *
    AddressFamily inet
    IdentityFile ~/.ssh/id_ed25519
    Compression yes
    ServerAliveInterval 60
    ServerAliveCountMax 20
    TCPKeepAlive yes
    GSSAPIAuthentication no
    #Port 22


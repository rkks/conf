# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).
#
# interfaces(5) file used by ifup(8) and ifdown(8)
# Include files from /etc/network/interfaces.d:
#    dns-nameserver 10.48.0.99
#    dns-nameserver 202.38.180.7
#    dns-nameserver 10.208.0.3
source-directory /etc/network/interfaces.d

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
allow-hotplug enp0s31f6
auto enp0s31f6
iface enp0s31f6 inet dhcp
    dns-search versa-networks.com
    dns-nameservers 202.38.180.7 10.208.0.3 10.48.0.99

auto wlp4s0
iface wlp4s0 inet dhcp
    pre-up  /etc/init.d/wpa.sh start
    post-down /etc/init.d/wpa.sh stop
